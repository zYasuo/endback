
PORT=3000
NODE_ENV=development

# --- PostgreSQL (Docker / local) ---
POSTGRES_USER=endback
POSTGRES_PASSWORD=endback_secret
POSTGRES_DB=endback_db
POSTGRES_PORT=5432

# --- Database connection (Prisma) ---
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# With Docker Compose use host "postgres". Locally use "localhost".
DATABASE_URL=postgresql://endback:endback_secret@localhost:5432/endback_db

# --- Redis (Docker / local) ---
# With Docker Compose use host "redis". Locally use "localhost".
REDIS_HOST=localhost
REDIS_PORT=6379

# --- External dictionary API (e.g. Free Dictionary API) ---
DICTIONARY_API_URL=https://api.dictionaryapi.dev/api/v2/entries
